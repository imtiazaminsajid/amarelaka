<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ward_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/ic_launcher"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Police Station Name"
        />
    <TextView
        android:id="@+id/police_station_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Gulshan Thana"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/police_station_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01677006082"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Fire Service Station Number"
        />

    <TextView
        android:id="@+id/fireService_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01515209606"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        />

    </LinearLayout>

</LinearLayout>